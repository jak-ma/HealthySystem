.container {
  padding: 20px;
}

.form-group {
  margin-bottom: 20px;
}

.form-group text {
  display: block;
  margin-bottom: 8px;
  font-size: 16px;
}

.form-group input {
  width: 100%;
  height: 40px;
  padding: 0 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 40px;
  background-color: #07C160;
  color: white;
  border: none;
  border-radius: 4px;
}