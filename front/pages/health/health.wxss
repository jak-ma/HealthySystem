page {
  --primary: #4A90E2; /* 信任蓝 */
  --secondary: #7ED321; /* 健康绿 */
  --alert: #FF4757;    /* 警示红 */
  --bg: #F8F9FA;       /* 浅灰背景 */
  --text: #2D3436;     /* 高对比文字 */
  --border: #E9ECEF;   /* 分割线 */
}

.container {
  padding: 30rpx;
  background-color: var(--bg);
  min-height: 100vh;
}

.health-title {
  font-size: 44rpx;
  font-weight: 600;
  line-height: 1.5;
  margin-bottom: 30rpx;
  color: var(--text);
}

.health-card {
  background: rgba(255,255,255,0.95);
  backdrop-filter: blur(10px); /* 毛玻璃效果 */
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.vital-signs {
  height: 500rpx;
  position: relative;
}

.vital-chart {
  width: 100%;
  height: 100%;
}

.vital-data {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.vital-value {
  font-size: 72rpx; /* 放大150% */
  font-weight: bold;
  color: var(--primary);
}

.vital-label {
  font-size: 32rpx;
  color: var(--text);
  margin-top: 10rpx;
}

.vital-status {
  font-size: 28rpx;
  margin-top: 10rpx;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  display: inline-block;
}

.status-normal {
  background-color: var(--secondary);
  color: white;
}

.status-warning {
  background-color: #FFC107;
  color: white;
}

.status-alert {
  background-color: var(--alert);
  color: white;
}

.vital-tabs {
  display: flex;
  margin-bottom: 20rpx;
}

.vital-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 32rpx;
  border-bottom: 4rpx solid transparent;
}

.vital-tab.active {
  border-bottom-color: var(--primary);
  color: var(--primary);
  font-weight: bold;
}

.touch-area {
  position: relative;
}

.touch-area::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  right: -50%;
  bottom: -50%;
  z-index: 1;
}

/* 历史记录样式 */
.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.history-item:last-child {
  border-bottom: none;
}

.history-time {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.history-value {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text);
  margin-right: 20rpx;
}

.no-data {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
  font-size: 28rpx;
}

/* 折叠面板样式 */
.health-panel {
  width: 100%;
}

.panel-item {
  background: rgba(255,255,255,0.95);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  margin-bottom: 30rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  position: relative;
}

.panel-header::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  right: -50%;
  bottom: -50%;
  z-index: 1;
}

.panel-header .title {
  font-size: 38rpx;
  font-weight: 600;
  color: var(--text);
}

.expand-icon {
  width: 48rpx;
  height: 48rpx;
  transition: transform 0.3s ease;
}

.panel-content {
  max-height: 0;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  padding: 0 30rpx;
}

.expanded .panel-content {
  max-height: 800rpx;
  padding: 0 30rpx 30rpx;
}

/* 数据上传模块样式 */
.upload-status {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.status-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.upload-btn {
  background-color: var(--primary);
  color: white;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 12rpx;
  width: 100%;
  text-align: center;
  box-shadow: 0 8rpx 16rpx rgba(74, 144, 226, 0.3);
}

.upload-area {
  position: relative;
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto 30rpx;
}

.visual-element {
  width: 200rpx;
  height: 200rpx;
  margin: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.touch-expansion {
  position: absolute;
  top: -50rpx;
  left: -50rpx;
  right: -50rpx;
  bottom: -50rpx;
}

.security-badge {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  color: #888;
  font-size: 24rpx;
}

.lock-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}