<!--pages/mine/mine.wxml-->
<view class="container">
  <view class="user-info-section">
    <block wx:if="{{hasUserInfo}}">
      <view class="avatar-placeholder">
        <text class="avatar-text">{{userInfo.username[0]}}</text>
      </view>
      <view class="user-name">{{userInfo.username}}</view>
      <view class="user-id">ID: {{userInfo.id}}</view>
    </block>
    <block wx:else>
      <view class="not-login-tip">您尚未登录</view>
      <navigator url="/pages/login/login" class="login-btn">去登录</navigator>
    </block>
  </view>
  
  <view class="divider"></view>
  
  <view class="menu-list">
    <view class="menu-item">
      <text class="menu-text">个人资料</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item">
      <text class="menu-text">健康档案</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item">
      <text class="menu-text">饮食记录</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item">
      <text class="menu-text">设置</text>
      <text class="arrow">></text>
    </view>
  </view>
  
  <view class="divider"></view>
  
  <view wx:if="{{hasUserInfo}}" class="logout-btn" bindtap="logout">退出登录</view>
</view>