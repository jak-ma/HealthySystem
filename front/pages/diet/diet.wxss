/* 基础样式 */
.diet-page {
    padding: 20rpx 30rpx 40rpx;
    background-color: #f9f9f9;
    min-height: 100vh;
    font-size: 28rpx;
  }
  
  /* 顶部标题栏 */
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40rpx;
  }
  .title {
    font-size: 44rpx;
    font-weight: bold;
    color: #2B2B2B;
  }
  .help-icon {
    width: 48rpx;
    height: 48rpx;
  }
  
  /* 通用分区样式 */
  .section {
    background: #FFFFFF;
    border-radius: 24rpx;
    padding: 30rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
  }
  .section-header {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
  }
  .section-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 16rpx;
  }
  .section-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    flex: 1;
  }
  .section-more {
    font-size: 26rpx;
    color: #999;
  }
  
  /* 营养食谱区域 */
  .recipe-scroll {
    white-space: nowrap;
    margin: 0 -30rpx 20rpx;
    padding: 0 30rpx;
  }
  .recipe-card {
    display: inline-block;
    width: 240rpx;
    margin-right: 20rpx;
    vertical-align: top;
  }
  .recipe-image {
    width: 240rpx;
    height: 180rpx;
    border-radius: 16rpx;
  }
  .recipe-info {
    padding: 12rpx 0;
  }
  .recipe-name {
    display: block;
    font-size: 28rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .recipe-tags {
    display: flex;
    margin-top: 8rpx;
  }
  .tag {
    font-size: 22rpx;
    color: #FF6B6B;
    background: #FFEEEE;
    padding: 4rpx 12rpx;
    border-radius: 20rpx;
    margin-right: 8rpx;
  }
  
  /* 个性化推荐按钮（红色系） */
  .recommend-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 96rpx;
    background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
    border-radius: 48rpx;
    color: #FFFFFF;
    font-weight: bold;
    box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
    transition: all 0.2s ease;
  }
  .recommend-btn:active {
    opacity: 0.9;
    transform: scale(0.98);
  }
  .recommend-btn .icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 16rpx;
  }
  
  /* 用餐提醒区域 */
  .reminder-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100rpx;
    border-bottom: 1rpx solid #F0F0F0;
  }
  .time-box {
    display: flex;
    align-items: center;
  }
  .time {
    font-size: 40rpx;
    font-family: DIN Alternate;
    color: #333;
    margin-right: 20rpx;
  }
  .meal-type {
    font-size: 26rpx;
    color: #999;
  }
  switch {
    transform: scale(0.8);
    transform-origin: right center;
  }
  
  /* 修改后的添加提醒按钮（蓝色系） */
  .add-reminder {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 96rpx;
    background: linear-gradient(135deg, #1E88E5 0%, #64B5F6 100%);
    border-radius: 48rpx;
    color: #FFFFFF;
    font-weight: bold;
    box-shadow: 0 4rpx 12rpx rgba(30, 136, 229, 0.3);
    transition: all 0.2s ease;
    margin-top: 20rpx;
  }
  .add-reminder:active {
    opacity: 0.9;
    transform: scale(0.98);
  }
  .add-reminder .add-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 16rpx;
  }
  
  /* 饮食日志区域 */
  .log-upload {
    display: flex;
    justify-content: space-between;
    margin-bottom: 30rpx;
  }
  .upload-card {
    width: 210rpx;
    height: 160rpx;
    background: #F8F8F8;
    border-radius: 16rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
  }
  /* 三餐不同图标 */

  .camera-icon {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 12rpx;
  }
  .upload-time {
    position: absolute;
    bottom: 12rpx;
    font-size: 22rpx;
    color: #999;
  }
  .today-summary {
    background: #F5F9FF;
    border-radius: 16rpx;
    padding: 20rpx;
  }
  .today-summary text {
    display: block;
    margin-bottom: 16rpx;
    color: #1E88E5;
  }
  progress {
    width: 100%;
  }
  
  /* 帮助弹窗 */
  .help-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 100;
  }
  .help-content {
    width: 80%;
    background: #FFF;
    border-radius: 24rpx;
    padding: 40rpx;
    box-sizing: border-box;
  }
  .help-title {
    display: block;
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
    text-align: center;
  }
  .help-text {
    display: block;
    white-space: pre-line;
    line-height: 1.6;
    margin-bottom: 40rpx;
  }
  .close-btn {
    background: #1E88E5;
    color: #FFF;
    border-radius: 48rpx;
    margin-top: 20rpx;
  }

  /* 修改后的上传卡片样式 */
.upload-card {
    width: 210rpx;
    height: 180rpx; /* 增加高度 */
    padding-bottom: 20rpx; /* 增加底部内边距 */
    position: relative;
  }
  
  /* 调整文字容器 */
  .upload-card > text:nth-of-type(1) {
    display: block;
    margin-top: 10rpx;
    margin-bottom: 8rpx; /* 增加与时间的间距 */
    font-size: 26rpx;
  }
  
  /* 时间文字样式优化 */
  .upload-time {
    position: absolute;
    bottom: 20rpx; /* 上移位置 */
    left: 0;
    right: 0;
    text-align: center;
    font-size: 22rpx;
    color: #999;
    padding: 0 10rpx; /* 防止边缘截断 */
  }
  