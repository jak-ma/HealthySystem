/* index.wxss */
.container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding: 20rpx;
}

/* 骨架屏样式 */
.skeleton {
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400% 100%;
  animation: skeleton-loading 1.5s ease infinite;
  border-radius: 16rpx;
}

.banner-skeleton {
  height: 320rpx;
  margin-bottom: 40rpx;
}

.skeleton-title {
  width: 200rpx;
  height: 40rpx;
  margin: 30rpx 0;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400% 100%;
  animation: skeleton-loading 1.5s ease infinite;
  border-radius: 16rpx;
}

.grid-skeleton {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.skeleton-item {
  height: 140rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400% 100%;
  animation: skeleton-loading 1.5s ease infinite;
  border-radius: 16rpx;
}

@keyframes skeleton-loading {
  0% { background-position: 100% 50%; }
  100% { background-position: 0 50%; }
}

/* 轮播图样式 */
.banner-swiper {
  height: 320rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 天气轮播图样式 */
.banner-swiper .weather-container {
  height: 320rpx;
  border-radius: 16rpx;
  padding: 20rpx;
}

/* 引入天气轮播图样式 */
@import "./weather-banner.wxss";


/* 快捷入口样式 */
.quick-access {
  background:linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 30rpx;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  transition: all 0.3s;
}

.grid-item-hover {
  transform: scale(0.95);
  opacity: 0.9;
}

.entry-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.entry-text {
  font-size: 26rpx;
  color: #424242;
  text-align: center;
  line-height: 1.4;
}