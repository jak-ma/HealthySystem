.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.1;
}

.weather-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 20rpx auto;
  width: 90%;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.city-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.city-info {
  display: flex;
  align-items: center;
}

.input-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.city-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.refresh-icon {
  width: 40rpx;
  height: 40rpx;
}

.weather-main {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx 0;
}

.weather-icon {
  width: 160rpx;
  height: 160rpx;
  margin-right: 40rpx;
}

.temperature-container {
  display: flex;
  align-items: baseline;
}

.temperature {
  font-size: 80rpx;
  font-weight: bold;
  color: #333;
}

.degree {
  font-size: 40rpx;
  color: #666;
}

.weather-desc {
  text-align: center;
  font-size: 36rpx;
  color: #666;
  margin: 20rpx 0;
}

.weather-details {
  margin: 40rpx 0;
}

.detail-item {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.detail-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.detail-label {
  font-size: 36rpx;
  color: #666;
  margin-right: 20rpx;
}

.detail-value {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.update-time {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
  margin-top: 40rpx;
}

.time-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.weather-reminder {
  display: flex;
  align-items: center;
  background: #fff8e1;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-top: 40rpx;
}

.reminder-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.reminder-text {
  font-size: 36rpx;
  color: #ff9800;
  flex: 1;
}

.custom-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4a90e2;
  color: white;
  border-radius: 40rpx;
  font-size: 36rpx;
  padding: 20rpx 40rpx;
  border: none;
}

.button-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.change-city-btn {
  background: #f0f0f0;
  color: #333;
}

/* 与health页保持一致的按钮样式 */
.primary-btn {
  background: #4a90e2;
  color: white;
  border-radius: 40rpx;
  font-size: 36rpx;
  padding: 30rpx 80rpx;
  margin-top: 40rpx;
}

/* 新增老年人友好样式 */
.large-text {
  font-size: 48rpx;
  line-height: 1.6;
}

.high-contrast {
  color: #000;
  background: #fff;
  border: 2rpx solid #000;
}