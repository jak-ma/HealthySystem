<view class="container">
  <view class="form">
    <view class="form-item">
      <text class="label">用户名</text>
      <input 
        class="input" 
        placeholder="请输入用户名" 
        placeholder-class="placeholder"
        bindinput="onUsernameInput"
      />
    </view>
    
    <view class="form-item">
      <text class="label">密码</text>
      <input 
        class="input" 
        password
        placeholder="请输入密码" 
        placeholder-class="placeholder"
        bindinput="onPasswordInput"
      />
    </view>
    
    <button 
      class="login-btn" 
      type="primary" 
      bindtap="onLogin"
    >登录</button>
    
    <navigator 
      url="/pages/register/register" 
      class="register-link"
    >没有账号？立即注册</navigator>
  </view>
</view>
