.container {
  padding: 20px;
  position: relative;
  
  
width: 100%;
height: 100%;
}

.background-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.input-section {
  margin-bottom: 20px;
}

.input-section input {
  width: calc(100% - 30px);
  margin-bottom: 10px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  display: inline-block;
  border: solid;
}

.input-icon {
  width: 20px;
  height: 20px;
  margin-right: 10px;
  vertical-align: middle;
}

.list-section {
  margin-top: 20px;
}

.medicine-item {
  padding: 15px;
  margin-bottom: 10px;
  border: solid;
  border-radius: 4px;
}

.medicine-item text {
  display: block;
  margin-bottom: 5px;
}

.list-icon {
  width: 20px;
  height: 20px;
  margin-right: 10px;
  vertical-align: middle;
}

.button-icon {
  width: 20px;
  height: 20px;
  margin-right: 5px;
  vertical-align: middle;
}
